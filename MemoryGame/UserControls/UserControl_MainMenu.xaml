<UserControl x:Class="MemoryGame.UserControls.UserControl_MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1a1a1a">
        <Label Content="Memory Game" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
        <Button x:Name="btn_play" Content="Play" HorizontalAlignment="Center" Height="40" Margin="0,135,0,0" VerticalAlignment="Top" Width="105" Click="Btn_Play_Click"/>
        <Button x:Name="btn_highscores" Content="Highscores" HorizontalAlignment="Center" Height="40" Margin="0,195,0,0" VerticalAlignment="Top" Width="105" Click="Btn_Highscores_Click"/>
        <Button x:Name="btn_options" Content="Options" HorizontalAlignment="Center" Height="40" Margin="0,255,0,0" VerticalAlignment="Top" Width="105" Click="Btn_Options_Click"/>
        <Button x:Name="btn_quit" Content="Quit" HorizontalAlignment="Center" Height="40" Margin="0,315,0,0" VerticalAlignment="Top" Width="105" Click="Btn_Quit_Click"/>

    </Grid>
</UserControl>
