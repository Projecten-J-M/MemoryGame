<UserControl x:Class="MemoryGame.UserControls.ContinueGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1a1a1a">
        <Label x:Name="lbl_continuegame" Content="Continue with existing game?" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,115,0,0" Height="60" Width="299" Foreground="White"/>
        <Button x:Name="Btn_continue" Content="Continue" FontSize="20" HorizontalAlignment="Center" Height="58" Margin="0,203,0,0" VerticalAlignment="Top" Width="200" Click="Btn_continue_click"/>
        <Button x:Name="Btn_newgame" Content="New game" FontSize="20" HorizontalAlignment="Center" Height="58" Margin="0,297,0,0" VerticalAlignment="Top" Width="200" Click="Btn_newgame_click"/>
        <Button x:Name="Btn_back" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Back_Click"/>
    </Grid>
</UserControl>
